<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/rojo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_marginTop="60dp" android:id="@+id/btnRed"
            app:layout_constraintStart_toEndOf="@+id/btnBlue"
            app:layout_constraintEnd_toStartOf="@+id/btnYellow" android:layout_marginEnd="5dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/btnBlue"/>
    <Button
            android:text="@string/amarillo"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
            android:layout_height="0dp" android:layout_width="0dp"
            android:id="@+id/btnYellow" app:layout_constraintStart_toEndOf="@+id/btnRed"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@+id/btnGreen"/>
    <Button
            android:text="@string/azul"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            app:layout_constraintEnd_toStartOf="@+id/btnGreen" android:layout_marginEnd="5dp"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/btnRed" android:id="@+id/btnBlue"/>
    <Button
            android:text="@string/verde"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
            android:layout_width="0dp"
            android:id="@+id/btnGreen" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/btnYellow" app:layout_constraintStart_toEndOf="@+id/btnBlue"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="5dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/progressBar" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/btnRed"/>
    <Button
            android:text="@string/btnIniciar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnStart"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>